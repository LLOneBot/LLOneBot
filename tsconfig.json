{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "paths": {
      "@/common/*": [
        "./src/common/*"
      ],
      "@/onebot11/*": [
        "./src/onebot11"
      ],
      "@/ntqqapi/*": [
        "./src/ntqqapi/*"
      ]
    },
    "noEmit": true
  },
  "include": ["src/*", "src/**/*", "scripts/*"],
  "exclude": ["node_modules"]
}
